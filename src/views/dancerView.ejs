<%- include('partials/header', {title: 'Dancer View'}); -%>
<link rel="stylesheet" href="/stylesheets/dancerView.css">

<body scroll="no">
    <div class="container">
        <div class="row ">
            <div class="col px-0">
                <button id="hideButton" class="btn btn-danger btn-lg" onclick="hideToggle()">X</button>
            </div>
            <div class="col-4 px-0">
                <div class="p-1 mb-2 bg-primary text-white text-center session-l" id="session"><%= session %></div>
            </div>
        </div>
    </div>
    <div id="settings" class="container">
        <div class="row">
            <div class="col">
                <div class="row justify-content-center">
                    <div class="col">
                        <h4 class="text-right text-white">Alpha(&alpha;): </h4>
                    </div>
                    <div class="col">
                        <h4 class="text-left text-white" id="alphaTag"></h4>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <h4 class="text-right text-white">Beta(&beta;): </h4>
                    </div>
                    <div class="col">
                        <h4 class="text-left text-white" id="betaTag"></h4>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <h4 class="text-right text-white">Gamma(&gamma;): </h4>
                    </div>
                    <div class="col">
                        <h4 class="text-left text-white" id="gammaTag"></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col px-0 mt-3">
                <h2 class="text-left text-white mx-2">Escena</h2>
            </div>
        </div>
        <div class="row">
            <div class="col px-0">
                <div class="btn-group btn-block">
                    <button id="sendAlpha" type="button" class="btn btn-light btn-lg btn-abg"
                        onclick="send(0)">1</button>
                    <button id="sendBeta" type="button" class="btn btn-light btn-lg btn-abg"
                        onclick="send(1)">2</button>
                    <button id="sendGamma" type="button" class="btn btn-light btn-lg btn-abg"
                        onclick="send(2)">3</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col px-0 mt-3">
                <h2 class="text-left text-white mx-2">sonido</h2>
            </div>
        </div>
        <div class="row">
            <div class="col px-0">
                <div class="btn-group btn-block">
                    <button id="soundAlpha" type="button" class="btn btn-light btn-lg btn-abg"
                        onclick="sound(0)">&alpha;</button>
                    <button id="soundBeta" type="button" class="btn btn-light btn-lg btn-abg"
                        onclick="sound(1)">&beta;</button>
                    <button id="soundGamma" type="button" class="btn btn-light btn-lg btn-abg"
                        onclick="sound(2)">&gamma;</button>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <button id="colorB" type="button" class="btn btn-light btn-lg btn-block"
                onclick="colorToggle()">color</button>
        </div>
    </div>

    <%- include('partials/imports'); -%>
    <!-- <script src="/javascripts/dancerView/dancerView.js"></script>
    <script src="/javascripts/dancerView/logic.js"></script> -->
